light_blue = #abd0ff
blue = #0080ff
offwhite = #fafafa
offwhite_semitransparent = rgba(245,248,248,0.8)
lightgrey  = #EDEEED
lightgray = lightgrey
darkgrey  = #696969
offblack = #353535
danger = #f25041
success = #00cd8d
attention = #0069ff

svg
  .stroked
    stroke blue
  .lightstroked
    stroke light_blue
  .thinstroked
    stroke-width 1px
  .unstroked
    stroke none;
  .white
    fill #FFF
  .paper
    fill offwhite_semitransparent
  .lightblue
    fill light_blue
  .darkblue
    fill blue
  .nofill
    fill none
  .active
    fill #15cd72
  .offwhite
    fill none
    stroke #fafafa
    stroke-width 3px
  .dashed
    stroke-dasharray 2
  .inherit-fill
    fill currentColor

  .drag:hover
    stroke-width 5
    stroke #000

/* REUSABLE */
.truncate
  white-space nowrap
  overflow-x hidden
  text-overflow ellipsis

.side-panel
  position fixed
  top 50px
  bottom 0
  height calc(100vh - 70px)
  overflow: hidden
  overflow-y scroll
  -webkit-transition: width .05s linear
  transition: width .05s linear
  -webkit-transform: translateZ(0) scale(1,1)
  z-index: 1000

.standard-padding
  padding 10px 20px

.standard-margin
  margin 10px

.center-on-grid
  position absolute
  margin-top calc(45vh -  86px)
  margin-left calc(50% -  175px)
  text-align center

.foreground
  position fixed
  z-index 20
  background-color #fbfbfb
  border 1px solid #e5e5e5
  box-shadow 0 0 4px rgba(0,0,0,0.05)

body
  background white
  color darkgrey

.main
  min-height calc(100vh)
  max-height calc(100vh)
  overflow hidden

  .detailPane
    @extend .standard-padding, .side-panel
    width 300px
    right 0

  .detailPane.collapsed
    right -280px

  nav
    @extend .side-panel, .standard-padding
    left 0
    width 110px

    li[data-category="node"]
      float left
      svg
        width 60px
        height 60px
        margin 5px

  .modeSelector
    left 110px

  .diagram
    position fixed
    width calc(100% - 120px)
    height calc(100vh - 120px)
    left 110px
    font-size 12px
    z-index 10
    background-repeat repeat
    background-position center center
    background-image url("data:image/png;base64,")
    text-align left

    &:focus
      outline: none;

    div[data-category="region"]
      @extend .center-on-grid
      z-index 1
      border 1px solid light_blue
      border-radius 10px
      background rgba(0,0,0,0.01)
      box-shadow 0 0 5px rgba(0,0,0,0.05)

      label
        @extend .truncate
        position absolute
        bottom -8px
        left 10px
        height 23px
        max-width 50%
        background offwhite
        padding 2.5px
        border-radius 3px


    figure[data-category="node"], figure[data-category="connector"]
      @extend .center-on-grid
      width 100px
      height 100px
      z-index 10
      text-align center

      label
        @extend .truncate
        top calc(50% - 16px)
        left calc(50% - 20px)
        width 40px
        height 18px
        max-width 100%
        background offwhite
        position absolute

      .hoverShow
        opacity 0
        transition opacity .05s ease-in-out;
        -moz-transition opacity .05s ease-in-out;
        -webkit-transition opacity .05s ease-in-out;

      .metadata
        position absolute
        bottom  5px
        right  5px

      figcaption
        @extend .truncate
        height 18px
        max-width 100%
        text-align left
        position absolute
        bottom  5px
        left 20px
        z-index -1

      .drag
        position absolute
        border-radius  5px
        background gray
        width 10px
        height 10px
      .drag.w
        top  45px
        left 00px
        cursor w-resize
      .drag.e
        top  45px
        right 0
        cursor e-resize
      .drag.s
        bottom 0
        left  45px
        cursor s-resize
      .drag.n
        top 0
        left  45px
        cursor n-resize

      .dns-label
        position absolute
        margin auto
        text-align center
        top -10px
        max-width 100%
        width 100%
        dt, dd
          display inline-block
          float left
          margin 0
          padding 1px 2px
          line-height 14px
          border-radius 2px 0 0 2px
          border 1px solid
          border-right none
          background lightgray
        dd
          @extend .truncate
          border-radius 0 2px 2px 0
          border 1px solid
          border-left none
          background none
          color offblack
          max-width calc(100% - 38px)

figure[data-category="node"]:hover, figure[data-category="connector"]:hover
  .hoverShow
    opacity 0.5!important


figure[data-category="node"]
  svg
    color offwhite_semitransparent
    stroke-width 2px

figure[data-category="connector"]
  svg
    stroke-width 1px
    opacity 0.75


figure[data-category="connector"][data-selected="true"], figure[data-category="node"][data-selected="true"]
  outline none
  svg
    stroke-width 2px
  use
    stroke-width 3px

*[draggable="true"]
  cursor pointer

#dragBox
  position fixed
  z-index 99999
  border 1px solid blue
  background rgba(150,150,255,0.1)
  display none
